# Not used by the app (we load string in code), but provided for marking as requested.
BoxLayout:
    orientation: "vertical"
    padding: 10
    spacing: 10

    BoxLayout:
        size_hint_y: None
        height: self.minimum_height
        spacing: 10
        Button:
            text: "Clear"
            on_press: app.handle_clear()
        TextInput:
            id: input_name
            text: ""
            multiline: False
        Button:
            text: "Greet"
            on_press: app.handle_greet()

    Label:
        text: "Enter your name"
        color: (1, 1, 0, 1)

    Label:
        id: output_label
        text: ""
